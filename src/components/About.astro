---
import { Icon } from "astro-icon/components"
import { aboutContent, siteConfig } from "../data/site"
---

<section id="about" class="bg-bg dark:bg-bg relative py-16" data-animate>
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<h2 class="section-heading">{`About ${siteConfig.name.split(" ")[0]}`}</h2>
		<div class="grid gap-8 lg:grid-cols-2">
			<div
				class="from-bg-secondary to-bg-tertiary border-border-primary rounded-2xl border bg-gradient-to-br p-6 shadow-lg"
			>
				<p class="text-text-secondary text-lg leading-relaxed">
					{aboutContent.intro}
				</p>
				<button
					id="aboutModalBtn"
					class="bg-gradient-primary button-hover mt-6 inline-flex items-center rounded-lg px-5 py-3 font-semibold text-white"
				>
					<Icon name="fa6-solid:book-open" class="mr-2" />
					More about me
				</button>
			</div>
			<div
				class="from-bg-secondary to-bg-tertiary border-border-primary rounded-2xl border bg-gradient-to-br p-6 shadow-lg"
			>
				<h3 class="font-heading mb-4 flex items-center text-xl font-semibold">
					<Icon name="fa6-solid:circle-info" class="text-text-primary mr-3" />
					Quick facts
				</h3>
				<div class="space-y-3">
					{
						aboutContent.quickFacts.map((fact) => (
							<div class="quick-fact-card rounded-xl border border-transparent p-4">
								<div class="flex items-start gap-3">
									<Icon name={fact.icon} class="text-text-primary text-lg" />
									<div class="flex-1">
										<h4 class="text-text-primary font-semibold">{fact.title}</h4>
										{Array.isArray(fact.value) ? (
											<div class="mt-2 flex flex-wrap gap-2">
												{fact.value.map((item) => (
													<span class="border-border-primary text-text-secondary rounded-full border px-3 py-1.5 text-sm">
														{item}
													</span>
												))}
											</div>
										) : (
											<p class="text-text-secondary leading-relaxed">{fact.value}</p>
										)}
									</div>
								</div>
							</div>
						))
					}
				</div>
			</div>
		</div>
	</div>

	<div
		id="aboutModal"
		class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 p-4"
	>
		<div
			class="bg-bg dark:bg-bg max-h-[80vh] w-full max-w-4xl overflow-y-auto rounded-2xl shadow-2xl"
		>
			<div class="border-border-primary flex items-center justify-between border-b p-6">
				<h3 class="font-heading text-2xl font-semibold">My Story</h3>
				<button id="closeAboutModal" class="text-text-muted text-2xl"> Ã— </button>
			</div>
			<div class="text-text-secondary space-y-6 p-6">
				<p>{aboutContent.modal.study}</p>
				<div class="bg-gradient-primary-lighter border-border-primary rounded-xl border p-6">
					<h4 class="mb-3 text-xl font-semibold">{aboutContent.modal.passionTitle}</h4>
					<p>{aboutContent.modal.passionText}</p>
				</div>
				<p>{aboutContent.modal.mix}</p>
				<p>{aboutContent.modal.personal}</p>
			</div>
		</div>
	</div>
</section>
