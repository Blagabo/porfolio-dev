---
import { Icon } from "astro-icon/components"
import { skillsContent } from "../data/site"
---

<section
	id="skills"
	class="border-border-primary border-t bg-bg-secondary py-16 dark:bg-bg-secondary"
	data-animate
>
	<div class="mx-auto max-w-7xl space-y-10 px-4 sm:px-6 lg:px-8">
		<div class="mx-auto max-w-3xl text-center">
			<h2 class="section-heading">Skills</h2>
			<p class="text-lg text-text-secondary">{skillsContent.intro}</p>
		</div>
		<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
			{
				skillsContent.domains.map((domain) => (
					<article class="border-border-primary card-hover rounded-2xl border bg-bg p-6 dark:bg-bg">
						<div class="mb-3 flex items-center gap-3">
							<Icon name={domain.icon} class="text-3xl text-text-primary" />
							<h3 class="text-lg font-semibold text-text-primary">{domain.title}</h3>
						</div>
						<p class="leading-relaxed text-text-secondary">{domain.description}</p>
					</article>
				))
			}
		</div>
		<div class="flex flex-wrap justify-center gap-3">
			{skillsContent.technical.map((item) => <span class="tech-pill">{item}</span>)}
		</div>
	</div>
</section>
