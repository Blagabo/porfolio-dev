---
import { Icon } from "astro-icon/components"
import { skillsContent } from "../data/site"
---

<section
	id="skills"
	class="bg-bg-secondary dark:bg-bg-secondary border-border-primary border-t py-16"
	data-animate
>
	<div class="mx-auto max-w-7xl space-y-10 px-4 sm:px-6 lg:px-8">
		<div class="mx-auto max-w-3xl text-center">
			<h2 class="section-heading">Skills</h2>
			<p class="text-text-secondary text-lg">{skillsContent.intro}</p>
		</div>
		<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
			{
				skillsContent.domains.map((domain) => (
					<article class="bg-bg dark:bg-bg border-border-primary card-hover rounded-2xl border p-6">
						<div class="mb-3 flex items-center gap-3">
							<Icon name={domain.icon} class="text-primary text-3xl" />
							<h3 class="text-text-primary text-lg font-semibold">{domain.title}</h3>
						</div>
						<p class="text-text-secondary leading-relaxed">{domain.description}</p>
					</article>
				))
			}
		</div>
		<div class="flex flex-wrap justify-center gap-3">
			{skillsContent.technical.map((item) => <span class="tech-pill">{item}</span>)}
		</div>
	</div>
</section>
